<phone:PhoneApplicationPage
    x:Class="Easy_Weight.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    shell:SystemTray.IsVisible="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        
        <phone:Pivot HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Loaded="Pivot_Loaded"
                     Width="480"
                     Height="668">
            <phone:PivotItem CacheMode="{x:Null}" 
                             Header="Weight">
                <Grid>
                    <TextBlock HorizontalAlignment="Left"
                               Margin="20,50,0,0"
                               TextWrapping="Wrap"
                               Text="Current Weight:"
                               VerticalAlignment="Top"
                               FontSize="30"/>
                    <TextBlock x:Name="weight" 
                               HorizontalAlignment="Left"
                               Margin="20,100,0,0"
                               TextWrapping="Wrap"
                               VerticalAlignment="Top"
                               FontSize="60" Foreground="{StaticResource LimeBrush}" Loaded="weight_Loaded"/>
                    <Image HorizontalAlignment="Left"
                           Source="/Assets/Images/Happy_Turtle.png" Margin="0,165,0,-165">
                    </Image>
                </Grid>
            </phone:PivotItem>
            
            <phone:PivotItem CacheMode="{x:Null}"
                             Header="New Entry"
                             Margin="12,28,12,-161">
                <StackPanel HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                    <TextBlock Text="What's your current weight?"
                               FontSize="25"/>
                    <TextBox x:Name="new_weight" 
                             InputScope="Number" />
                    <Button Content="Add Entry?" 
                            Margin="0,50,0,0" 
                            Click="Button_Click" />
                </StackPanel>

            </phone:PivotItem>
        </phone:Pivot>
                
        <StackPanel Height="100" 
                    Grid.Row="1"
                    Background="{StaticResource LimeBrush}">
            <Image Height="100"
        		Source="/Assets/Images/logo.png"/>
        </StackPanel>
    </Grid>

</phone:PhoneApplicationPage>